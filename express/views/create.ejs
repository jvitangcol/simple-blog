<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="max-w-[1024px] mx-auto py-10 px-5">
      <form action="/blogs" method="POST" class="flex flex-col gap-5">
        <!-- Title -->
        <div class="flex flex-col gap-2">
          <label for="title" class="font-medium">Blog title</label>
          <input
            type="text"
            id="title"
            name="title"
            placeholder="Enter the title"
            required
            class="w-full px-4 py-2 border border-[#d8d8d8] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#644a40]"
          />
        </div>

        <!-- Snippet -->
        <div class="flex flex-col gap-2">
          <label for="snippet" class="font-medium">Blog snippet</label>
          <input
            type="text"
            id="snippet"
            name="snippet"
            required
            placeholder="Enter the snippet"
            class="w-full px-4 py-2 border border-[#d8d8d8] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#644a40]"
          />
        </div>

        <!-- Body -->
        <div class="flex flex-col gap-2">
          <label for="body" class="font-medium">Blog body</label>
          <textarea
            id="body"
            name="body"
            required
            placeholder="Enter the body..."
            class="w-full px-4 py-2 border border-[#d8d8d8] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#644a40] h-[200px]"
          ></textarea>
        </div>
        <button class="bg-[#644a40] text-[#ffffff] rounded-lg px-4 py-2">
          Submit
        </button>
      </form>
    </div>
  </body>
</html>
